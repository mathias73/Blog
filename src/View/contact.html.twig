{% extends 'base.html.twig' %}

{% block content %}
    <div class="col-lg-8 col-md-10 mx-auto mt-5 mb-5">
        <h3>Formulaire de contact</h3>
        <form id="formContact">
            <div class="control-group">
                <div class="form-group floating-label-form-group controls">
                    <label for="nom">Nom & Prénom</label>
                    <input type="text" class="form-control" id="nom" name="nom" placeholder="Nom & Prénom" required>
                </div>
            </div>
            <div class="control-group">
                <div class="form-group floating-label-form-group controls">
                    <label for="email">E-mail</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="E-mail" required>
                </div>
            </div>
            <div class="control-group">
                <div class="form-group floating-label-form-group controls">
                    <label for="sujet">Sujet</label>
                    <input type="text" class="form-control" id="sujet" name="sujet" placeholder="Sujet" required>
                </div>
            </div>
            <div class="control-group">
                <div class="form-group floating-label-form-group controls">
                    <label for="message">Message</label>
                    <textarea class="form-control"  id="message" name="message" rows="5" placeholder="Message" required></textarea>
                </div>
            </div>
            <br>
            <input type="button" class="btn btn-primary float-right" id="js-submit-btn" value="Envoyer">
            <input type="hidden" id="token" name="token">
            <br>
        </form>
    </div>
{% endblock %}

{% block javascript %}
    <script src="./Public/js/SendMail.js" type="javascript"></script>
    <script src="https://www.google.com/recaptcha/api.js?render=6Lcrac0ZAAAAAAfRIDcYVke-jibAee72NKv5yble"></script>
    <script>
        grecaptcha.ready(function() {
        grecaptcha.execute('6Lcrac0ZAAAAAAfRIDcYVke-jibAee72NKv5yble', {action: 'homepage'}).then(function(token) {
            // console.log(token);
            document.getElementById("token").value = token;
        });
    });
    </script>
{% endblock %}
