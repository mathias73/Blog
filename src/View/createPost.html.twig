{% extends 'base.html.twig' %}

{% block title %}
    Créer ton post !
{% endblock %}

{% block stylesheet %}
    <script src="https://cdn.tiny.cloud/1/ktx088jengagzyqleocjgjqmtrg2xx3z09m1lnkbe61oopta/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
{% endblock %}

{% block content %}
    <header class="masthead" style="background-image: url('src/Public/img/post-bg.jpg'); height: 75%;!important;">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto ">
                    <div class="site-heading">
                        <h2>Création de votre post !</h2>
                    </div>
                </div>
            </div>
        </div>
    </header>
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto mb-5">
            <form method="post">
                <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                        <label for="title">Titre</label>
                        <input type="text" class="form-control" placeholder="Titre" id="title" name="title" required="">
                    </div>
                </div>
                <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                        <label for="lead">Chapô</label>
                        <input type="text" class="form-control" placeholder="Chapô" id="lead" name="lead" required="">
                    </div>
                </div>
                <br>
                <textarea id="mytextarea">Votre post . . .</textarea>
                <br>
                <button type="submit" class="btn btn-primary float-right">Poster</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
{% block javascript %}
<script>
    tinymce.init({
    selector: 'textarea',
    language: 'fr_FR'
});
</script>
{% endblock %}
